<% include ../Layout/header %>
		<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active"><%= title %></li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header"><%= title %></h1>
			</div>
		</div><!--/.row-->
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Panel title</h3>
			</div>
			<div class="panel-body">
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Name</th>
								<th>Description</th>
								<th>Price</th>
								<th>Image</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody>
							<% if(results) { %>
						<%		results.forEach(obj=>{  %>
							<tr>
											<td><%= obj.nameProduct  %></td>
											<td><%= obj.description  %></td>
											<td><%= obj.price  %></td>
											<td  align="center"><img src="http://localhost:3000/uploads/<%= obj.image %>"  rel="stylesheet" width="100px"></td>
											<% if(obj.status == 0){ %>
												<td align="center"><span class="label label-primary">Ẩn</span>
											<%	}else{ %>
												<td align="center"><span class="label label-success">Hiện</span>
											<% } %>

							</tr>
						<%	}) %>
							<%	}  %>
						</tbody>
					</table>
			</div>
			
		</div>
		
	</div>	
<% include ../Layout/footer %>
