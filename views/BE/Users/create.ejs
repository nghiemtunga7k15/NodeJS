<% include ../Layout/header %>
		<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active"><%= title %></li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header"><%= title %></h1>
			</div>
		</div><!--/.row-->
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">Panel title</h3>
			</div>
			<div class="panel-body">
					
				<form action="/create-category" role="form" method="POST" >

					<div class="form-group">
					    <label for="exampleInputEmail1">Category Name</label>
					    <input type="text" class="form-control" name="name" style="border: 1px solid black;" placeholder="Category">
					    <% if(typeof errName !== 'undefined'){ %>
							<div class="help-block" style="color: red"><%= errName %></div>
						<%	} %>
					</div>
					<div class="form-group">
					    <label for="exampleInputEmail1">Author</label>
					    <input type="text" class="form-control" name="author" style="border: 1px solid black;" placeholder="Author">
					     <% if(typeof errAuthor !== 'undefined'){ %>
							<div class="help-block" style="color: red"><%= errAuthor %></div>
						<%	} %>
					</div>
			
					<div class="form-group">
						<label for="exampleInputEmail1">Create Date Current </label><br>
						   <select name="day" id="input"  style="font-size: 13px;height: 46px;padding: 5px;width: 150px;border: 1px solid black;" required="required">
						   		<option value="<%= day %>"><%= day %></option>
						   	</select>	
						   	<select name="month" id="input" style="font-size: 13px;height: 46px;padding: 5px;width: 150px;border: 1px solid black;" required="required">
						   		<option value="<%= month %>"><%= month %></option>
						   	</select>	
						   	 <select name="year" id="input"  style="font-size: 13px;height: 46px;padding: 5px;width: 150px;border: 1px solid black;" required="required">
						   		<option value="<%= year %>"><%= year %></option>
						   	</select>	
					</div>
					
					  <button type="submit" class="btn btn-primary btn-lg">Create</button>
					
				</form>
			</div>
			
		</div>
		
	</div>	
<% include ../Layout/footer %>
